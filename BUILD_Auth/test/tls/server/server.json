{
    "env": {
        "NODE_ENV": "development"
    },
    "debug": {
        "active": 1
    },
    "server": {
        "workers": 0
    },
    "logging": {
        "output": {
            "stdout": { "type": "console" }
        },
        "loggers": {
            "*": { "stdout": "debug" }
        },
        "http": {
            "logMode": "response"
        }
    },
    "db": {
        "hosts": "localhost",
        "database": "norman-auth-server",
        "options": {
            "db": {
                "w": 1
            },
            "server": {
                "poolSize": 5,
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    "deployment": {
        "strategy": "single"
    },
    "http": {
        "hostname": "my.norman.sap.corp",
        "port": 9443,
        "tls": {
            "key": "../my.norman.sap.corp.key",
            "cert": "../my.norman.sap.corp.cer",
            "ca": "../cacerts/SAPNetCA.pem",
            "requestCert": true,
            "rejectUnauthorized": false
        },
        "proxy": {
            "host": "proxy",
            "port": 8080
        }
    },
    "session": {
        "secret": "Dj23fVtahDYE3dfjCAHrJhzrUDosljxqVDDN9VNhRJDVf8TyD1F1nqYrjGYF",
        "tokenExpirationMinutes": 5,
        "tokenLength": 64,
        "tokenExpirationDays" : 30
    },
    "facebook": {
        "clientID": "942447102435121",
        "clientSecret": "33a4514d7c42bea5f421219f7218c727",
        "callbackURL": "/auth/facebook/callback",
