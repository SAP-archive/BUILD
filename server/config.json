{
    "env": {
        "NODE_ENV": "development"
    },
    "debug": {
        "active": true,
        "liveReload": [
            "/norman"
        ]
    },
    "server": {},
    "logging": {
        "logDirectory": "logs",
        "output": {
            "stdout": {
                "type": "console"
            },
            "logfile": {
                "type": "file",
                "path": "norman_{now:yyyyMMdd}.log"
            }
        },
        "loggers": {
            "*": {
                "stdout": "debug",
                "logfile": "info"
            }
        }
    },
    "db": {
        "hosts": "localhost",
        "database": "norman",
        "options": {
            "db": {
                "w": 1
            },
            "server": {
                "poolSize": 5,
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    "deployment": {
        "strategy": "single"
    },
    "http": {
        "port": 9000,
        "proxy": {
            "host": "proxy",
            "port": 8080
        },
        "secureFlag": false
    },
    "mail": {
        "sender":"do.not.reply@sap.com",
        "smtp": {
            "host": "mail.sap.corp",
            "port": 25,
            "debug": true,
            "tls": {
                "rejectUnauthorized": false
            }
        }
    },
    "services": "./config/services.json",
    "features": "./config/features.json",
    "security": "./config/security.json",
    "web": {
        "root": "../dev",
        "errors": {
            "root": "errors"
        },
        "indexFallback": [
            "/verifyemail",
            "/auth",
            "/auth/*",
            "/login",
            "/signup",
            "/norman",
            "/reset-password",
            "/privacystatement"
        ],
        "compression": {
            "threshold": 512
        },
        "body-parser": {
            "json": {
                "limit": "1mb"
            }
        }
    },
      "fileUpload":{
        "limits": {
