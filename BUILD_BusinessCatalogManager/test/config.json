{
    "env": {
        "NODE_ENV": "development"
    },
    "debug": {
        "active": false,
        "liveReload": [
            "/norman"
        ]
    },
    "server": {},
    "logging": {
        "logDirectory": "logs",
        "output": {
            "stdout": {
                "type": "console"
            },
            "logfile": {
                "type": "file",
                "path": "norman_{now:yyyyMMdd}.log"
            }
        },
        "loggers": {
            "*": {
                "stdout": "debug",
                "logfile": "info"
            }
        }
    },
    "db": {
        "hosts": "localhost",
        "database": "norman-business-catalog-test",
        "options": {
            "db": {
                "safe": true
            },
            "server": {
                "poolSize": 20,
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    "deployment": {
        "strategy": "single"
    },
    "http": {
        "port": 9026,
        "secureFlag": false
    },
    "services": {
        "filters": {
            "auth": {
                "module": "norman-auth-server",
                "filter": "auth",
                "options": {}
            },
            "jwt": {
                "module": "norman-auth-server",
                "filter": "jwt",
                "options": {}
            },
            "xsrf": {
                "module": "norman-auth-server",
                "filter": "xsrf",
                "options": {
                    "headerName": "X-CSRF-Token",
                    "cookieName": "X-CSRF-Token"
                }
            }
        },
        "locations": [
            {
                "/api": [
                    "jwt",
                    "auth",
                    "xsrf"
                ]
            }
        ],
        "handlers": {
            "norman-auth-server": {
                "users": "/api/users",
                "auth": "/auth"
            },
            "norman-business-catalog-manager-server": "/api/catalogs",
            "norman-audit-server": "/audit"
        }
    },
    "features": {
        "disable-prototype": {
            "name": "Prototype service, transform the prototype definition from metadata to actual code.",
            "enabled": false
        },
        "disable-verification-email": {
            "name": "Disable the ability of the application to resend verification email from users profile",
            "enabled": false
        }
    },
    "web": {
        "root": "../dev",
        "errors": {
            "root": "errors"
        },
        "indexFallback": [
            "/verifyemail",
            "/auth",
            "/login",
            "/signup",
            "/norman"
        ],
        "compression": {
            "threshold": 512
        }
    },
    "security": {
        "registration" : {
            "self" : true,
            "social" : true
        },
        "provider" : {
            "local" : true
        },
        "maxLoginAttempts" : 5,
        "lockTimeInHours" : 2,
        "crypto" : {
            "saltLength" : 32,
            "keyLength" : 32,
            "iterations" : 10000,
            "emailVerifyingTokenLength" : 64
        },
        "failedLoginReasons" : {
            "notFound" : "The email or password you entered is incorrect. Please try again.",
            "passwordIncorrect" : "The email or password you entered is incorrect. Please try again.",
            "maxAttempts" : "Your account has been temporarily locked, please try again later."
        },
        "passwordPolicy" : {
            "minLength" : 6,
            "maxLength" : 40,
            "digits" : {
                "allowed" : true
            },
            "upperCase" : {
                "allowed" : true
            },
            "lowerCase" : {
                "allowed" : true
            },
            "specialCharacters" : {
                "allowed" : true
            },
            "bannedPasswords" : [
            ],
            "bannedCharacterCombination" : ["@sap.com"]
        },
        "errorMessage" : "Validation error",
        "scopes": [
            {
                "name": "access",
                "permissions": {
                    "standard": ["standard"],
                    "guest": ["guest"]
                }
            },
            {
                "name": "project",
                "permissions": {
                    "collaborator": ["standard"]
                }
            },
            {
                "name": "study",
                "permissions": {
                    "participant": ["guest"]
                }
            }
        ],
        "roles" : {
            "projectRoles" : [
                {
                    "roles" : "owner-projectId",
                    "allows" : [
                        {
                            "resources" : "/projectId",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/projects/projectId",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/projects/projectId/prototype",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/projects/projectId/studies",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/projects/projectId/document",
                            "permissions" : ["*"]
                        },
                        {
                            "resources" : "/api/projects/projectId/settings",
                            "permissions" : ["put", "patch", "delete"]
                        },
                        {
                            "resources" : "/api/projects/projectId/owner",
                            "permissions" : ["put"]
                        },
                        {
                            "resources" : "/api/models/projectId",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/sampledata/projectId",
                            "permissions" : ["put", "get"]
                        },
                        {
                            "resources" : "/api/participant",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/uicatalogs",
                            "permissions" : ["get","post","delete"]
                        }
                    ]
                },
                {
                    "roles" : "collaborator-projectId",
                    "allows" : [
                        {
                            "resources" : "/projectId",
                            "permissions" : ["put", "post", "patch", "get"]
                        },
                        {
                            "resources" : "/api/projects/projectId",
                            "permissions" : ["put", "post", "patch", "get"]
                        },
                        {
                            "resources" : "/api/projects/projectId/studies",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/models/projectId",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/projects/projectId/prototype",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/projects/projectId/document",
                            "permissions" : ["*"]
                        },
                        {
                            "resources" : "/api/sampledata/projectId",
                            "permissions" : ["put", "get"]
                        },
                        {
                            "resources" : "/api/participant",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/uicatalogs",
                            "permissions" : ["get","post","delete"]
                        }
                    ]
                },
                {
                    "roles" : "spectator-projectId",
                    "allows" : [
                    ]
                }
            ],
            "defaultGlobalRole" : "standard",
            "globalRoles" : [
                {
                    "roles" : "admin",
                    "allows" : [
                        {
                            "resources" : "/api",
                            "permissions" : ["*"]
                        },
                        {
                            "resources" : "/api/catalogs",
                            "permissions" : ["*"]
                        },
                        {
                            "resources" : "/api/catalogs/import",
                            "permissions" : ["*"]
                        },
                        {
                            "resources" : "/api/uicatalogs",
                            "permissions" : ["*"]
                        },
                        {
                            "resources" : "/api/users",
                            "permissions" : ["post"]
                        }
                    ]
                },
                {
                    "roles" : "standard",
                    "allows" : [
                        {
                            "resources" : "/api/participant",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/api/projects/",
                            "permissions" : ["post"]
                        },
                        {
                            "resources" : "/api/catalogs",
                            "permissions" : ["get"]
                        },
                        {
                            "resources" : "/api/catalogs/search",
                            "permissions" : ["post"]
                        },
                        {
                            "resources" : "/api/catalogs/entities",
                            "permissions" : ["post"]
                        },
                        {
                            "resources" : "/deploy/*",
                            "permissions" : ["get"]
                        },
                        {
                            "resources" : "/public/*",
                            "permissions" : ["get"]
                        },
                        {
                            "resources" : "/openui5/*",
                            "permissions" : ["get"]
                        },
                        {
                            "resources" : "/api/uicatalogs",
                            "permissions" : ["get","post","delete"]
                        },
                        {
                            "resources" : "/api/users/avatar",
                            "permissions" : ["post"]
                        }
                    ]
                },
                {
                    "roles" : "guest",
                    "allows" : [
                        {
                            "resources" : "/api/participant",
                            "permissions" : ["put", "post", "patch", "get", "delete"]
                        },
                        {
                            "resources" : "/deploy/*",
                            "permissions" : ["get"]
                        },
                        {
                            "resources" : "/public/*",
                            "permissions" : ["get"]
                        },
                        {
                            "resources" : "/openui5/*",
                            "permissions" : ["get"]
                        },
                        {
                            "resources" : "/api/uicatalogs",
                            "permissions" : ["get"]
                        }
                    ]
                }
            ]
        }
    }
}